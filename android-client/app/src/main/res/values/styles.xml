<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Section UI Styles -->
    <style name="SectionHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/divider_text</item>
    </style>

    <style name="SectionDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorAccent</item>
    </style>

    <!-- Radio Button Customization -->
    <style name="radio_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/grid_1x</item>
        <item name="android:paddingBottom">@dimen/grid_1x</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>

